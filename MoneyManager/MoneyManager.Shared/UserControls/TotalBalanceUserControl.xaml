<UserControl
    x:Class="MoneyManager.UserControls.TotalBalanceUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converter="using:MoneyManager.Converter"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    DataContext="{Binding TotalBalanceView, Source={StaticResource Locator}}">

    <UserControl.Resources>
        <converter:AmountConverter x:Key="AmountConverter" />
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal">
        <TextBlock Text="Total: " Style="{StaticResource MenuItemSubSmallText}"
                   Margin="0,0,5,10" />
        <TextBlock Text="{Binding TotalBalance, Mode=TwoWay, Converter={StaticResource AmountConverter}}"
                   Style="{StaticResource MenuItemSubSmallText}" Margin="0,0,5,0" />
        <TextBlock Text="{Binding Settings.Currency}"
                       Style="{StaticResource MenuItemSubSmallText}" Margin="0,0,5,10" />
    </StackPanel>
</UserControl>