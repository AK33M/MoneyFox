<UserControl
    x:Class="MoneyManager.UserControls.SettingsGeneralUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    DataContext="{Binding LanguageSettingUserControlView, Source={StaticResource Locator}}">

    <Grid>
        <StackPanel>
            <ComboBox ItemsSource="{Binding LanguageList}" Header="language" x:Uid="LanguageHeader"
                      SelectedValue="{Binding SelectedValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock x:Uid="InfoLanguageSettingsText"
                       Style="{StaticResource MenuItemSubSmallText}"
                       Text="Here will be a info text to notify which kind of stuff that is affected." />
        </StackPanel>
    </Grid>
</UserControl>