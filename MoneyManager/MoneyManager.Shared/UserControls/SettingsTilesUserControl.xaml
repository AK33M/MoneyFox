<UserControl
    x:Class="MoneyManager.UserControls.SettingsTilesUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel>
        <StackPanel Orientation="Horizontal" Tapped="CreateIntakeTile">
            <Image Source="/Images/spendingTileIcon.png"
                   Width="50" Height="50" />
            <TextBlock Text="create tile" VerticalAlignment="Center"
                       Style="{StaticResource ItemHeaderText}"
                       Margin="40,0,0,0" />
        </StackPanel>
    </StackPanel>
</UserControl>