<UserControl
    x:Class="MoneyManager.UserControls.BackupUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <StackPanel Margin="12,0,12,0">
            <Button HorizontalAlignment="Stretch" Content="Connect with Microsoft Account" 
                Click="connectButton_Click"  />
            <Button Content="create backup" HorizontalAlignment="Stretch" Click="btnBackup_Click" IsEnabled="False" />
            <Button Content="restore" HorizontalAlignment="Stretch" Click="btnRestore_Click" IsEnabled="False" />
        </StackPanel>
    </Grid>
</UserControl>
