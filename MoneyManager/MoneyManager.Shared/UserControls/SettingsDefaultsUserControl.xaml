<UserControl
    x:Class="MoneyManager.UserControls.SettingsDefaultsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="using:MoneyManager.UserControls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <StackPanel>
            <ComboBox Header="account" x:Uid="AccountHeader"
                      ItemTemplate="{StaticResource ComboBoxTemplate}"
                      ItemsSource="{Binding AllAccounts, Mode=TwoWay}"
                      SelectedItem="{Binding SelectedTransaction.ChargedAccount, Mode=TwoWay}" />
            <userControls:SelectCategoryUserControl />
        </StackPanel>
    </Grid>
</UserControl>