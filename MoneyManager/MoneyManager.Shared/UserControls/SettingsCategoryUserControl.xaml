<UserControl
    x:Class="MoneyTracker.UserControls.SettingsCategoryUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <DataTemplate x:Key="CategoryTemplate">
            <StackPanel Margin="0,0,0,12" HorizontalAlignment="Stretch"
                        MinWidth="300" Holding="CategoryList_Holding">
                <FlyoutBase.AttachedFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Uid="Delete" Text="Delete" Click="Delete_OnClick" />
                    </MenuFlyout>
                </FlyoutBase.AttachedFlyout>
                <TextBlock Style="{StaticResource MenuItemText}" Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <StackPanel>
        <ListView ItemsSource="{Binding AllCategories}" x:Name="CategoryList"
                  SelectionChanged="CategoryList_SelectionChanged"
                  ItemTemplate="{StaticResource CategoryTemplate }" />
    </StackPanel>
</UserControl>