<UserControl
    x:Class="MoneyManager.UserControls.TransactionListUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converter="using:Helper.Converter"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400"
    DataContext="{Binding TransactionDataAccess, Source={StaticResource Locator}}">

    <UserControl.Resources>
        <converter:CultureConverter x:Key="FormatConverter" />
        <DataTemplate x:Key="TransactionTemplate">
            <StackPanel Margin="0,0,0,12" HorizontalAlignment="Stretch"
                        MinWidth="100" Background="{ThemeResource PhoneChromeBrush}">
                <FlyoutBase.AttachedFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Uid="Delete" Text="Delete" />
                        <MenuFlyoutItem x:Uid="Edit" Text="Edit" />
                    </MenuFlyout>
                </FlyoutBase.AttachedFlyout>
                <Grid HorizontalAlignment="Stretch" Margin="0,0,10,10">
                    <TextBlock Style="{StaticResource MenuItemMediumSmallText}" Text="{Binding Date, ConverterParameter=\{0:d\}, Converter={StaticResource FormatConverter}}" Margin="12,0,0,0" />
                    <TextBlock Style="{StaticResource MenuItemMediumSmallText}" Text="{Binding Amount}"
                               HorizontalAlignment="Right" TextAlignment="Right" />
                </Grid>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <StackPanel>
        <ListView ItemsSource="{Binding RelatedTransactions, Mode=TwoWay}"
                  ItemTemplate="{StaticResource TransactionTemplate}"
                  HorizontalAlignment="Stretch" >
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </StackPanel>
</UserControl>