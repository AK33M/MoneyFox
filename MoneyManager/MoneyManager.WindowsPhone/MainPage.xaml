<Page
    x:Class="MoneyManager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="using:MoneyManager.UserControls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <MenuFlyout x:Key="AddTransactionFlyOut">
            <MenuFlyoutItem x:Uid="Spending" Text="spending" />
            <MenuFlyoutItem x:Uid="Income" Text="income" />
        </MenuFlyout>
    </Page.Resources>
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton Icon="Add" x:Uid="AddTransaction" Label="add transaction" Flyout="{StaticResource AddTransactionFlyOut}" />
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <AppBarButton Icon="Add" x:Uid="NewAccount" Label="new account" Click="AddAccount_Click" />
                <AppBarButton Icon="Add" x:Uid="SettingsOverview" Label="settings" Click="Settings_Click" />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition />
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Hub x:Uid="ApplicationName" Header="MoneyTracker" HorizontalAlignment="Left" Margin="0,27,0,0" VerticalAlignment="Top">
                <HubSection x:Uid="AccountsMenu" Header="overview">
                    <DataTemplate>
                        <userControls:AccountListUserControl />
                    </DataTemplate>
                </HubSection>
                <HubSection x:Uid="OverviewMenu">
                    <DataTemplate>
                        <userControls:BarChartUserControl />
                    </DataTemplate>
                </HubSection>
            </Hub>
        </Grid>
    </Grid>
</Page>