<ContentDialog
    x:Class="MoneyManager.Dialogs.AddCategoryDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoneyManager.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Uid="Meta"
    Title="Add Category"
    PrimaryButtonText="done"  
    SecondaryButtonText="cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBox x:Uid="CategoryName" Header="category name"/>

        <TextBlock Style="{StaticResource MessageDialogContentStyle}"
                   TextWrapping="Wrap"
                   x:Uid="AddCategoryInfoText">
            <TextBlock.Text>
                We will show this information in you category lists.
                If you wanna edit this information, go to category settings."
            </TextBlock.Text>
        </TextBlock>
    </StackPanel>
</ContentDialog>
