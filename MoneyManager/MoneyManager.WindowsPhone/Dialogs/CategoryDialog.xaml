<ContentDialog
	x:Class="MoneyManager.Dialogs.CategoryDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Title="ADD CATEGORY"
	x:Uid="CategoryDialog"
	PrimaryButtonText="done"
	SecondaryButtonText="cancel"
	PrimaryButtonClick="DoneOnClick"
	DataContext="{Binding CategoryDataAccess, Source={StaticResource Locator}}">

	<StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
		<TextBox Header="name" x:Uid="Name"
		         Text="{Binding SelectedCategory.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
	</StackPanel>
</ContentDialog>