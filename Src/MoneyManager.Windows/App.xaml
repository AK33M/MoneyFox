<Application x:Class="MoneyManager.Windows.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="using:MoneyManager.Core"
             xmlns:windows="using:MoneyManager.Windows"
             xmlns:converter="using:MoneyManager.Windows.Converter"
            RequestedTheme="Dark">

    <Application.Resources>
        <ResourceDictionary>
            <core:CoreModule x:Key="CoreModule" />
            <windows:WindowsModule x:Key="WindowsModule" />
            <converter:BooleanToThemeConverter x:Key="BooleanToThemeConverter"/>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/AppStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="Style/ColorsDark.xaml" />
                        <ResourceDictionary Source="Style/AppStyles.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="Style/ColorsDark.xaml" />
                        <ResourceDictionary Source="Style/AppStyles.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>

                <ResourceDictionary x:Key="Light">
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="Style/ColorsLight.xaml" />
                        <ResourceDictionary Source="Style/AppStyles.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>