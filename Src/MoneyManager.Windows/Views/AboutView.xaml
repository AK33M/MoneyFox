<views:MvxWindowsPage x:Class="MoneyManager.Windows.Views.AboutView"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:controls="using:MoneyManager.Windows.Controls"
                      xmlns:views="using:Cirrious.MvvmCross.WindowsCommon.Views"
                      mc:Ignorable="d"
                      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <controls:PageHeader>
            <controls:PageHeader.HeaderContent>
                <TextBlock Style="{ThemeResource PageTitleTextBlockStyle}"
                           Text="AboutView"
                           x:Uid="AboutViewTitle" />
            </controls:PageHeader.HeaderContent>
        </controls:PageHeader>

        <ScrollViewer Margin="12,0, 12, 0"
                      Grid.Row="1"
                      EntranceNavigationTransitionInfo.IsTargetElement="True"
                      HorizontalAlignment="Center">
            <StackPanel>

                <StackPanel>
                    <Grid Margin="0,0,10,0">
                        <Image Source="/Assets/ApplyLogo.png"
                               Width="150"
                               Margin="5,0"
                               HorizontalAlignment="Center" />
                    </Grid>
                    <Path Data="M9,242 L456,242"
                          Height="15"
                          Margin="0,10"
                          Stretch="Fill"
                          UseLayoutRounding="False"
                          Stroke="{StaticResource ApplicationForegroundThemeBrush}"
                          StrokeThickness="2" />
                    <TextBlock TextWrapping="Wrap"
                               Style="{ThemeResource SubtitleTextBlockStyle}"
                               Text="info"
                               Margin="0,0,0,5"
                               HorizontalAlignment="Left"
                               x:Uid="InfoLabel"
                               VerticalAlignment="Top" />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock TextWrapping="Wrap"
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   Text="Version: "
                                   HorizontalAlignment="Left"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   x:Uid="VersionLabel" />
                        <TextBlock TextWrapping="Wrap"
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   Text="{Binding Version}"
                                   HorizontalAlignment="Left"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    <TextBlock TextWrapping="Wrap"
                               Style="{ThemeResource SubtitleTextBlockStyle}"
                               Text="contact"
                               Margin="0,10,0,5"
                               HorizontalAlignment="Left"
                               x:Uid="ContactLabel"
                               VerticalAlignment="Top" />
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,20"
                                Tapped="GoToWebsite_OnTap"
                                HorizontalAlignment="Center">
                        <TextBlock TextWrapping="Wrap"
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   Text="www.apply-solutions.ch"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Tapped="ComposeMail_OnTap"
                                HorizontalAlignment="Center">
                        <TextBlock TextWrapping="Wrap"
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   Text="mobile.support@apply-solutions.ch"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
                <Button x:Name="RateMeButton"
                        x:Uid="RateThisApp"
                        Content="Rate this App"
                        Tapped="RateApp_OnTap"
                        HorizontalAlignment="Stretch"
                        Margin="0,10,0,10" />
                <TextBlock TextWrapping="Wrap"
                           Style="{ThemeResource BodyTextBlockStyle}"
                           Text="Opensource note"
                           HorizontalAlignment="Center"
                           x:Uid="OpenSourceNote"
                           VerticalAlignment="Top" />
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,20"
                            Tapped="GoToRepository_Tap"
                            HorizontalAlignment="Center">
                    <TextBlock Style="{ThemeResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               Text="www.github.com"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</views:MvxWindowsPage>