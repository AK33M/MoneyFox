<UserControl x:Class="MoneyManager.Windows.Views.UserControls.CategoryListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:MoneyManager.Windows.Controls"
             xmlns:designTime="using:MoneyManager.Core.ViewModels.DesignTime"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:core="using:Microsoft.Xaml.Interactions.Core"
             xmlns:converter="using:MoneyManager.Windows.Converter"
             xmlns:model1="using:MoneyFox.Foundation.Model"
             d:DataContext="{d:DesignInstance designTime:DesignTimeCategoryListViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <UserControl.Resources>
        <converter:ClickConverter x:Key="ClickConverter" />

        <DataTemplate x:Key="CategoryTemplate"
                      x:DataType="model1:Category">
            <StackPanel Margin="0,6,0,6"
                        HorizontalAlignment="Stretch"
                        MinWidth="300"
                        RightTapped="CategoryListRightTapped"
                        Holding="CategoryListHolding">
                <FlyoutBase.AttachedFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Uid="Edit"
                                        Text="Edit"
                                        Click="EditCategory" />
                        <MenuFlyoutItem x:Uid="Delete"
                                        Text="Delete"
                                        Click="DeleteCategory" />
                    </MenuFlyout>
                </FlyoutBase.AttachedFlyout>
                <TextBlock Text="{x:Bind Name}"
                           Style="{ThemeResource BodyTextBlockStyle}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <Grid EntranceNavigationTransitionInfo.IsTargetElement="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="240*" />
        </Grid.RowDefinitions>
        <TextBox Header="search"
                 Grid.Row="0"
                 Margin="5,0,5,0"
                 x:Uid="SearchHeader"
                 Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <ScrollViewer Margin="0,7,0,0" Grid.Row="1">
            <controls:AlternatingRowListView OddRowBackground="{StaticResource ListViewBackgroundOddBrush}"
                                             EvenRowBackground="{StaticResource ListViewBackgroundEvenBrush}"
                                             ItemsSource="{Binding Categories}"
                                             ItemTemplate="{StaticResource CategoryTemplate }"
                                             IsItemClickEnabled="True">
                <interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="ItemClick">
                        <core:InvokeCommandAction Command="{Binding DoneCommand, Mode=OneWay}"
                                                  InputConverter="{StaticResource ClickConverter}" />
                    </core:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch" />
                        <Setter Property="VerticalContentAlignment"
                                Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
            </controls:AlternatingRowListView>
        </ScrollViewer>
    </Grid>
</UserControl>