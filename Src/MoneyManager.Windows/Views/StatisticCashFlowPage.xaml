<views:MvxWindowsPage
    x:Class="MoneyManager.Windows.Views.StatisticCashFlowPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:MvvmCross.WindowsUWP.Views"
    xmlns:userControls="using:MoneyManager.Windows.Views.UserControls"
    xmlns:windows="using:OxyPlot.Windows"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <userControls:PageHeader>
            <userControls:PageHeader.HeaderContent>
                <TextBlock Style="{ThemeResource PageTitleTextBlockStyle}"
                           Text="About"
                           x:Uid="AboutTitle" />
            </userControls:PageHeader.HeaderContent>
        </userControls:PageHeader>
        
        <StackPanel Grid.Row="1">
            <TextBlock Text="{Binding Title}"
                       Style="{StaticResource DeemphasizedBodyTextBlockStyle}" />
            <windows:PlotView x:Name="CashFlowPlotViewModel"
                              IsMouseWheelEnabled="False"
                              Model="{Binding CashFlowModel}"
                              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              IsEnabled="False"
                              Margin="0,30,30,0" />
        </StackPanel>
        <CommandBar Grid.Row="2"
                    ClosedDisplayMode="Minimal">
            <CommandBar.SecondaryCommands>
                <AppBarButton Icon="Calendar"
                              x:Uid="SetDate"
                              Label="Set Date"
                              Click="SetDate" />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Grid>
</views:MvxWindowsPage>

