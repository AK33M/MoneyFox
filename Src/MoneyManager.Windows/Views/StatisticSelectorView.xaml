<views:MvxWindowsPage
    x:Class="MoneyManager.Windows.Views.StatisticSelectorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:MvvmCross.WindowsUWP.Views"
    xmlns:userControls="using:MoneyManager.Windows.Views.UserControls"
    xmlns:model="using:MoneyManager.Foundation.Model"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="StatistcTypeTemplate"
                      x:DataType="model:StatisticSelectorType">
            <StackPanel HorizontalAlignment="Stretch"
                        Background="Transparent"
                        Margin="0,0,0,12">
                <TextBlock Text="{x:Bind Name}"
                           TextTrimming="CharacterEllipsis"
                           Style="{StaticResource CustomSubtitleTextBlockStyle}" />
                <TextBlock Text="{x:Bind Description}"
                           Style="{StaticResource DeemphasizedBodyTextBlockStyle}" />
                <Path Data="M9,242 L456,242"
                      Height="15"
                      Margin="0,10"
                      Stretch="Fill"
                      UseLayoutRounding="False"
                      Stroke="{ThemeResource SystemControlHighlightChromeHighBrush}"
                      StrokeThickness="2"
                      Fill="{ThemeResource SystemControlHighlightChromeHighBrush}" />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <userControls:PageHeader>
            <userControls:PageHeader.HeaderContent>
                <TextBlock Style="{ThemeResource PageTitleTextBlockStyle}"
                           Text="Select Statistic"
                           x:Uid="StatisticSelectorViewTitle" />
            </userControls:PageHeader.HeaderContent>
        </userControls:PageHeader>

    </Grid>
</views:MvxWindowsPage>