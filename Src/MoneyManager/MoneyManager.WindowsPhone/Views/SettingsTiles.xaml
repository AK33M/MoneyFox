<Page
    x:Class="MoneyManager.Views.SettingsTiles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converter="using:MoneyManager.Business.Converter"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding TileSettingsView, Source={StaticResource Locator}}">

    <Page.Resources>
        <converter:RevertVisibilityConverter x:Key="RevertVisibilityConverter" />
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <ContinuumNavigationTransitionInfo />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Grid>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition />
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="19,0,0,0">
            <TextBlock Text="settings" x:Uid="SettingsOverviewTitle" Style="{ThemeResource TitleTextBlockStyle}"
                       Margin="0,12,0,0" />
            <TextBlock Text="tiles" x:Uid="Tiles" Margin="0,-6.5,0,26.5" Style="{ThemeResource HeaderTextBlockStyle}"
                       CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" />
        </StackPanel>

        <Grid Grid.Row="1" Margin="19,9.5,19,0">
            <StackPanel>
		        <ToggleSwitch VerticalAlignment="Center"
		                      Header="Show Cashflow on Maintile"
		                      x:Uid="ShowInfoOnMainTileHeader"
		                      IsOn="{Binding ShowInfoOnMainTile, Mode=TwoWay}"
		                      OnContent="yes" />
		        <Path Data="M9,242 L456,242"
		              Fill="{StaticResource PhoneAccentBrush}"
		              Height="15"
		              Margin="0,10"
		              Stretch="Fill"
		              UseLayoutRounding="False"
		              Stroke="{StaticResource PhoneAccentBrush}"
		              StrokeThickness="2" />

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*" />
                        <ColumnDefinition Width="301*" />
                    </Grid.ColumnDefinitions>
                    <Grid Background="{StaticResource PhoneAccentBrush}"
                          Grid.Column="0"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch">
                        <Image Source="/Images/incomeTileIcon.png"
                               VerticalAlignment="Stretch"
                               HorizontalAlignment="Stretch" />
                    </Grid>
                    <Button Content="create income tile"
                            x:Uid="AddIncomeTile"
                            Grid.Column="1"
                            Click="CreateIncomeTile"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Visibility="{Binding Visibility, ElementName=ButtonRemoveIncomeTile, Converter={StaticResource RevertVisibilityConverter}}"
                            Margin="12,0,0,0" />
                    <Button Content="remove income tile"
                            x:Uid="RemoveIncomeTile"
                            Click="RemoveIncomeTile"
                            x:Name="ButtonRemoveIncomeTile"
                            Visibility="{Binding IncomeTile.Exists, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Grid.Column="1"
                            Margin="12,0,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center" />
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*" />
                        <ColumnDefinition Width="301*" />
                    </Grid.ColumnDefinitions>
                    <Grid Background="{StaticResource PhoneAccentBrush}">
		                <Image Source="/Images/spendingTileIcon.png"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Stretch" />
		            </Grid>
                    <Button Content="create spending tile"
                            x:Uid="AddSpendingTile"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Stretch"
                            Margin="12,0,0,0"
                            Click="CreateSpendingTile"
                            Visibility="{Binding Visibility, ElementName=ButtonRemoveSpendingTile, Converter={StaticResource RevertVisibilityConverter}}" />
                    <Button Content="remove spending tile" 
                            x:Uid="RemoveSpendingTile"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Stretch"
                            Margin="12,0,0,0"
                            Click="RemoveSpendingTile" x:Name="ButtonRemoveSpendingTile"
		                    Visibility="{Binding SpendingTile.Exists, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*" />
                        <ColumnDefinition Width="301*" />
                    </Grid.ColumnDefinitions>
                    <Grid Background="{StaticResource PhoneAccentBrush}">
		                <Image Source="/Images/transferTileIcon.png"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Stretch" />
		            </Grid>
                    <Button Content="create transfer tile"
                            x:Uid="AddTransferTile"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Stretch"
                            Margin="12,0,0,0"
                            Click="CreateTransferTile"
                            Visibility="{Binding Visibility, ElementName=ButtonRemoveTransferTile, Converter={StaticResource RevertVisibilityConverter}}" />
                    <Button Content="remove transfer tile" x:Uid="RemoveTransferTile"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Stretch"
                            Margin="12,0,0,0"
                            Click="RemoveTransferTile" x:Name="ButtonRemoveTransferTile"
		                    Visibility="{Binding TransferTile.Exists, Converter={StaticResource BooleanToVisibilityConverter}}" />
		        </Grid>
		    </StackPanel>
        </Grid>
    </Grid>
</Page>