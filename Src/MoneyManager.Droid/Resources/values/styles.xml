<resources>

    <!-- Application theme -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@colors/colorPrimary</item>
        <item name="colorPrimaryDark">@colors/colorPrimaryDark</item>
        <item name="colorAccent">@colors/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">false</item>

        <item name="android:windowBackground">@colors/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme.Base">
        <item name="colorControlNormal">@colors/gray</item>
        <item name="colorControlActivated">@colors/colorPrimary</item>
        <item name="colorControlHighlight">@colors/med_gray</item>

        <item name="android:statusBarColor">@colors/dark_gray</item>
    </style>

    <style name="AppTheme.Menu" parent="AppTheme.Base">
        <item name="colorPrimary">@colors/black</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.Base">
        <item name="android:statusBarColor">@colors/colorPrimaryDark</item>
    </style>
</resources>